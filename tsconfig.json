{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "types": [
      "webpack-env",
      "node"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "include": [
    "./src/main/typescript/**/*",
    "./src/test/typescript/**/*",
    "./src/main/resources/css/*",
    "./src/main/resources/img/*",
    "./node_modules/object-path-immutable/*"
  ]
}
